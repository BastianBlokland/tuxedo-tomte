# print status from all packages
# in a nice formated output
sub listStatus {
	my @arr = ( ['Name', 'Version', 'Active', 'Blacklisted', 'Required'] );
	my $name;

	foreach $name (sort keys %origConfModules) {
		push(@arr,
			["$origConfModules{$name}{name}",
			 "$origConfModules{$name}{version}",
			 "$origConfModules{$name}{active}",
			 "$origConfModules{$name}{blacklisted}",
			 "$origConfModules{$name}{required}"]);
	}
	for my $row (@arr) {
		format STDOUT =
@<<<<<<<<<<<<<<<<<<<<  @<<<<<<<<<<<<  @<<<<<<<<<<<<  @<<<<<<<<<<<<  @<<<<<<<<<<<<
		@$row
.
		write;
	}
}


# for keyboard not present on boot
# for XC1711 on all distributions
sub i8042fix() {
	my $key = shift;
	my @kernel_parameters = ("i8042.nopnp");
	my $retval;
	printLog("applying i8042fix\n");
	$retval = insertGrub($key, \@kernel_parameters);
}


# for not being able to boot if system is on battery
# affects BA15
sub nobootonbattery() {
	my $key = shift;
	my @kernel_parameters = ("iommu=soft");
	my $retval;
	printLog("applying nobootonbattery\n");
	$retval = insertGrub($key, \@kernel_parameters);
}


# traverses the origConfModules hash and starts the subroutine in the list
# if conditions as noted in the list are met
# not active, not blacklisted, required
sub applyAllFixes {
	my $state = shift;		# configure or reconfigure
	my $key;
	my $exit_status;
	foreach $key (keys %origConfModules) {
		if ( installable($key, $state) ne "" ) {
			$key->($key);
		}
	}
	updateGrub();
}


# call system update-grub
sub updateGrub {
	my $exit_status;
	if ($updateGrubTrigger) {
		$exit_status = system("update-grub");
		if ( $exit_status == 0 ) {
			printLog("error starting update-grub\n");
		}
	}
	return $exit_status;
}


# checks if some module can be installed
# requires module key and wether configure or reconfigure
sub installable {
	my $key = shift;
	my $state = shift;
	# TODO change for delivery
	if ( $origConfModules{$key}{active} eq 'no' &&
   		 $origConfModules{$key}{blacklisted} eq 'no' &&
		 $origConfModules{$key}{required} eq 'yes'  &&
		 $state eq 'configure') {
		printLog("configure mode active\n");
		return $key;
	} elsif ( $origConfModules{$key}{active} eq 'yes' &&
        	  $origConfModules{$key}{blacklisted} eq 'no' &&
        	  $origConfModules{$key}{required} eq 'yes'  &&
        	  $state eq 'reconfigure') {
		printLog("reconfigure mode active\n");
		return $key;
	} else {
		return "";
	}
}


# get sub name from %origConfModules list from given module name
sub getSubName {
	my $key;
	foreach $key ( keys %origConfModules ) {
		if ( $ARGV[1] eq $origConfModules{$key}{name} ) {
			return $key;
		}
	}
	# return empty string if module is not found
	return "";
}


# when configure is selected
# configures requested module or all
# requires module name or "all" as parameters
sub configure {
	my $state = shift;		# configure or reconfigure
	my $key;
	my $exit_status;
	if ($ARGV[1]) {
		if ($ARGV[1] eq 'all') {
			printLog("configure all\n");
			checkRequirements();
			applyAllFixes($state);
		} else {
			$key = getSubName();
			if ( $key ne "" ) {
				checkRequirements();
				if ( installable($key, $state) ne "" ) {
					printLog("configure $key\n");
					$key->($key);
					$exit_status = updateGrub();
					if ($exit_status != 0) {
						printLog("everything is good\n");
						print "everything is good\n";
					} else {
						printLog("something went wrong, the required fixes could not be applied!\n");
						print "something went wrong, the required fixes could not be applied!\n";
					}
				}
			} else {
				printLog("wrong module name\n");
				print "wrong module name\n";
			}
		}
	} else {
		printLog("undefined module name\n");
		print "undefined module name\n";
	}
}


# show description of module
sub moduleDescription() {
	my $key;
	if ($ARGV[1]) {
		$key = getSubName();
		if ( $key ne "" ) {
            print "$origConfModules{$key}{description}\n";
		} else {
			print "module: $ARGV[1] is not in the origConfModules list\n";
		}
    } else {
		print "missing module name\n";
	}
}

# text to print for help
my $USAGE =<<USAGE;
tuxedo-tomte {COMMAND}
  list                        List all origConfModules with detailed status
  description MODULE          Shows the description of the module
  configure MODULE ...|all    Configure an unconfigured module
  reconfigure MODULE...|all   Reconfigure a configured module
  remove MODULE...|ALL        Remove a configured module
  blacklist MODULE ...        Blacklist a module
  unblacklist MODULE ...      Unblacklist a module
  help                        Prints this message
USAGE

# prints help
sub help {
	print "$USAGE\n";
	exit 0;
}

sub checkRoot {
	if( $> != 0 ) {
		print "this option must be run as root\n";
		exit (0);
	}
}

